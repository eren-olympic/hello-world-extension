{
  "manifest_version": 3,
  "name": "Input Field Filler",
  "version": "1.0",
  "description": "Detects all input fields on a page and fills them with 'test'",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
  